generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String?
  firstName    String
  lastName     String
  phoneNumber  String?
  createdAt    DateTime @default(now())
  dni          String?
  photoUrl     String?
  googleId     String?  @unique

  player Player?
}

model Match {
  id              String   @id @default(uuid())
  date            DateTime
  time            String
  location        String
  category        String
  pointsDeviation Int
  statusId        String
  createdAt       DateTime @default(now())
  creatorId       String
  creator         Player   @relation("creatorMatch", fields: [creatorId], references: [id])

  status  MatchStatus @relation(fields: [statusId], references: [id])
  players Player[]    @relation("matchPlayers") // Relación para los jugadores
  teams   Team[]
  sets    Set[]
}

model Player {
  id            String  @id @default(uuid())
  name          String?
  lastName      String?
  level         String?
  rankingPoints Int?
  phone         String?

  teams   Team[]
  matches Match[] @relation("matchPlayers") // Relación inversa para los jugadores
  userId  String? @unique
  user    User?   @relation(fields: [userId], references: [id])

  Match Match[] @relation("creatorMatch")
}

model Team {
  id         String   @id @default(uuid())
  matchId    String
  match      Match    @relation(fields: [matchId], references: [id])
  players    Player[]
  teamNumber Int
}

model MatchStatus {
  id          String @id @default(uuid())
  name        String @unique
  description String

  Match Match[]
}

model Set {
  id         String @id @default(uuid())
  matchId    String
  match      Match  @relation(fields: [matchId], references: [id])
  setNumber  Int
  team1Score Int
  team2Score Int
}
